<service>
    <id>@dist.project.id@</id>
    <name>@dist.project.name@</name>
    <description>@dist.project.description@</description>
    <workingdirectory>%BASE%\</workingdirectory>
    <logpath>%BASE%\logs</logpath>
    <logmode>rotate</logmode>

    <executable>java</executable>
    <startargument>-Dspring.application.admin.enabled=true</startargument>
    <startargument>-Dcom.sun.management.jmxremote.port=@dist.jmx.port@</startargument>
    <startargument>-Dcom.sun.management.jmxremote.authenticate=false</startargument>
    <startargument>-Dcom.sun.management.jmxremote.ssl=false</startargument>
    <startargument>-Xms512M</startargument>
    <startargument>-Xmx512M</startargument>
    <startargument>-Xmn256M</startargument>
    <startargument>-XX:MetaspaceSize=128M</startargument>
    <startargument>-XX:MaxMetaspaceSize=256M</startargument>
    <startargument>-XX:+AggressiveOpts</startargument>
    <startargument>-XX:+UseBiasedLocking</startargument>
    <startargument>-XX:+DisableExplicitGC</startargument>
    <startargument>-XX:+UseG1GC</startargument>
    <startargument>-Xloggc:logs/gc.log</startargument>
    <startargument>-Dspring.config.location=conf/application.properties</startargument>
    <startargument>-cp</startargument>
    <startargument>lib/*</startargument>
    <startargument>com.its.smart.daemon.StartSpringBootService</startargument>
    <startargument>@dist.start.class@</startargument>

    <stopexecutable>java</stopexecutable>
    <stopargument>-cp</stopargument>
    <stopargument>lib/*</stopargument>
    <stopargument>com.its.smart.daemon.StopSpringBootService</stopargument>
    <stopargument>@dist.jmx.port@</stopargument>
</service>