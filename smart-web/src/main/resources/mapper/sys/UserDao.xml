<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.its.smart.web.repository.sys.UserDao">
	
	<resultMap id="userResultMap" type="com.its.smart.api.entity.sys.User">
		<id column="c_id" property="id" jdbcType="VARCHAR"/>
		<result column="c_account" property="account" jdbcType="VARCHAR"/>
		<result column="c_password" property="password" jdbcType="VARCHAR"/>
		<result column="c_sex" property="sex" jdbcType="VARCHAR"/>
		<result column="c_icon" property="icon" jdbcType="VARCHAR"/>
		<result column="c_email" property="email" jdbcType="VARCHAR"/>
		<result column="c_phone" property="phone" jdbcType="VARCHAR"/>
		<result column="c_name" property="name" jdbcType="VARCHAR"/>
		<result column="c_display_name" property="displayName" jdbcType="VARCHAR"/>
		<result column="c_create_user" property="createUser" jdbcType="VARCHAR"/>
		<result column="c_modify_user" property="modifyUser" jdbcType="VARCHAR"/>
		<result column="c_create_time" property="createTime" jdbcType="TIMESTAMP"/>
		<result column="c_modify_time" property="modifyTime" jdbcType="TIMESTAMP"/>
		<result column="c_memo" property="memo" jdbcType="VARCHAR"/>
		<result column="c_is_custom" property="isCustom" jdbcType="TINYINT"/>
		<result column="c_business_id" property="businessId" jdbcType="VARCHAR"/>
	</resultMap>

	<select id="queryObject" parameterType="java.lang.String" resultMap="userResultMap">
		select * from t_user where c_id = #{value}
	</select>

</mapper>